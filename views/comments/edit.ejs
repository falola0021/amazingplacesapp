
<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1 class="h3 mb-3 font-weight-normal">Edit comment</h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
<form class="form-signin"  action="/places/<%= place_id %>/comments/<%=comment._id%>?_method=PUT" method ="POST">
  <div class="form-group">
       <input  id="inputtext" class="form-control"  type = "text"   name ="comment[text]"   value="<%=comment.text%>" autofocus >
         </div>
         <div class="form-group">
         <button type="submit" class="btn-lg btn-primary btn-block">update comment</button">  
         </div>
        </form>
        <a href="/places %>">Show all places</a>
    </div>
</div>
