

<% include ../partials/header %>

<div class="container">
    <div class="row">
        
        <h1 style="text-align: center;">Edit <%=  place.name %></h1>
        
        <div style="width: 40%; margin: 30px auto;">
            <form action="/places/<%= place._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label for="place[name]">Name</label>
                    <input class="form-control" type="text" name="place[name]" value="<%= place.name %>">
                </div>
                
                <div class="form-group">
                    <label for="place[price]">Price</label>
                    <input class="form-control" type="number" name="place[price]" value="<%= place.price %>" min="0.00" step="0.01">
                </div>
                
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                
                <div class="form-group">
                    <label for="place[description]">Description</label>
                    <input class="form-control" type="text" name="place[description]" value="<%= place.description %>">
                </div>
                
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= place.location %>">
                </div>
                <div class="form-group">
                    <label for="location">Main Site Link</label>
                    <input class="form-control" type="text" name="place[site]" id="site" value="<%= place.site %>">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>

                <a href="/places">Go Back</a>

            </form>

        </div>
    </div>
    
</div>

<% include ../partials/footer %>