
            
<% include ../partials/header %>

<div class="container">
    <div class="row">
        
        <h1 style="text-align: center;">Add a New Place</h1>
        
        <div style="width: 40%; margin: 30px auto;">
            <form action="/places" method="POST" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="place[name]" placeholder="place name">
                </div>
                
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="place[price]" placeholder="price" min="0.00" step="0.01">
                </div>
                
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
                
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="place[description]" placeholder="description">
                </div>
                
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Muritala Park,Lagos">
                </div>
                <div class="form-group">
                    <label for="location">Main Site Link</label>
                    <input class="form-control" type="text" name="place[site]" id="site" placeholder="add the link to main site">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            
                <a href="/places">Go Back</a>
                            
            </form>

        </div>
    </div>
    
</div>

<% include ../partials/footer %>





