<% include ../partials/header %>

<div class="container">
    
    <header class="jumbotron">
        <div class="container">
            <h1>AMAZING PLACES!</h1>
            <p>View our random selection of beautiful places in Lagos</p>
            <p>
                <a class="btn btn-primary btn-lg" href="places/new">Add New Place</a>
                <a href="/places" id="viewPlace" class="btn btn-lg btn-primary">View All Places</a>   
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">

        <% places.forEach(function(place){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= place.image %>">
                    <div class="caption">
                        <h4><%= place.name %></h4>
                    </div>
                    <p>
                        <a href="/places/<%= place._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>

<div class="container">
    <div class="col-md-12">
        <% if (noMatch !== undefined) { %>
            <h3><%= noMatch %></h3>
        <% } %>
    </div>
</div>

<% include ../partials/footer %>